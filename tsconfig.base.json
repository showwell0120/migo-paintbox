{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@paintbox/model-media": ["packages/model/media/src/index.ts"],
      "@paintbox/react-base": ["packages/react/base/src/index.ts"],
      "@paintbox/react-button": ["packages/react/button/src/index.ts"],
      "@paintbox/react-checkbox": ["packages/react/checkbox/src/index.ts"],
      "@paintbox/react-chip": ["packages/react/chip/src/index.ts"],
      "@paintbox/react-currency-input": [
        "packages/react/currency-input/src/index.ts"
      ],
      "@paintbox/react-dialog": ["packages/react/dialog/src/index.ts"],
      "@paintbox/react-display": ["packages/react/display/src/index.ts"],
      "@paintbox/react-form": ["packages/react/form/src/index.ts"],
      "@paintbox/react-foundation": ["packages/react/foundation/src/index.ts"],
      "@paintbox/react-pagination": ["packages/react/pagination/src/index.ts"],
      "@paintbox/react-search-bar": ["packages/react/search-bar/src/index.ts"],
      "@paintbox/react-select-option": [
        "packages/react/select-option/src/index.ts"
      ],
      "@paintbox/react-spinner": ["packages/react/spinner/src/index.ts"],
      "@paintbox/react-table": ["packages/react/table/src/index.ts"],
      "@paintbox/react-tag": ["packages/react/tag/src/index.ts"],
      "@paintbox/react-time-picker": [
        "packages/react/time-picker/src/index.ts"
      ],
      "@paintbox/react-toast": ["packages/react/toast/src/index.ts"],
      "@paintbox/react-tree-view": ["packages/react/tree-view/src/index.ts"],
      "@paintbox/react-ui": ["packages/react/ui/src/index.ts"],
      "@paintbox/util-i18n": ["packages/util/i18n/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
