{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@paintbox/model-video": ["packages/model/video/src/index.ts"],
      "@paintbox/react-button": ["packages/react/button/src/index.ts"],
      "@paintbox/react-chip": ["packages/react/chip/src/index.ts"],
      "@paintbox/react-dialog": ["packages/react/dialog/src/index.ts"],
      "@paintbox/react-tag": ["packages/react/tag/src/index.ts"],
      "@paintbox/react-test": ["packages/react/test/src/index.ts"],
      "@paintbox/react/toast": ["packages/react/toast/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
